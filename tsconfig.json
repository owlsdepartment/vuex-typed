{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "./dist/types",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "lib": ["ES2017", "ES7", "ES6", "DOM"],
        "outDir": "./dist/lib",
        "target": "ES5",
        "strict": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "plugins": [
            { "transform": "typescript-transform-paths" },
            { "transform": "typescript-transform-paths", "afterDeclarations": true }
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ],
    "exclude": ["node_modules", "dist"]
}